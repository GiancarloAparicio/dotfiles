snippet options "Permite usar banderas (-u,-a) desde un script, si se usa ':' se espera que se ingrese un valor, ejm: (u:a) 'script -u juan -a' "
while getopts "u:a" flag
do
	case "\${flag}" in
		u)
			username=\${OPTARG}
			;;
		a)
			age=20
			;;
	esac
done

echo "Username: \$username";
echo "Age: \$age";
endsnippet

