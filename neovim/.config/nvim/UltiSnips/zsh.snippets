snippet test "Plantilla para correr test, en un hook de git"
command="${1:run test}"

echo "Executing tests before commit"

$command

result=\$?

if [[ "\$result" -ne 0 ]]; then
	echo "\${RED}Failed execution of tests\${ENDCOLOR}"
	exit 1
fi

exit 0
endsnippet

